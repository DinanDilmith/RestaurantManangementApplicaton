<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CafeOrderController">
    <Label text="Cafe Order App" />
    <ListView fx:id="menuListView" prefHeight="200" />
    <HBox>
        <Label text="Quantity:" />
        <TextField fx:id="quantityField" />
    </HBox>
    <Button text="Add to Order" onAction="#addToOrder" />
    <Button text="Place Order" onAction="#placeOrder" />
    <HBox>
        <Label text="Total Bill: " />
        <Label fx:id="totalBillLabel" />
    </HBox>
</VBox>
